#include<iostream>
using namespace std;
int main(){
	/*
	 * x = y + z + ……
	 * a是x的分子
	 * b是x的分母
	 * c是y/z/……的分母
	 */
	int a,b,c;
	cin >> a >> b;
//	a = 8;
//	b = 11;
	while(1){
		if (b%a != 0) {
			c = b/a + 1;
			cout << "Step1: a\n" << a << " " << b << " " << c << endl;
		}else {
			c = b/a;
			a = 1;
			cout << "Step1: b\n" << a << " " << b << " " << c << endl;
		}

		if (a == 1) {
			cout << "1/" << c<< endl;
			cout << "Step2: a\n" << a << " " << b << " " << c << endl;
			break;
		}else {
			cout << "1/" << c << "+"<< endl;
			cout << "Step2: b\n" << a << " " << b << " " << c << endl;
		}

		a = a * c - b;
		b = b * c;
		cout << "Step3: \n" << a << " " << b << " " << c << endl;

		if (a == 3) {
			cout << "1/" << b/2 << "+" << "1/" << b<< endl;
			cout << "Step4: \n" << a << " " << b << " " << c << endl;
			break;
		}
	}
	return 0;
}
